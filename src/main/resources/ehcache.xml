<?xml version="1.0" encoding="UTF-8"?>
<config
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.ehcache.org/v3"
    xsi:schemaLocation="
        http://www.ehcache.org/v3 https://www.ehcache.org/schema/ehcache-core-3.10.xsd">

    <!-- Cache pour les entités -->
    <cache alias="entities">
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <heap unit="entries">1000</heap>
    </cache>

    <!-- Cache pour les résultats de requêtes -->
    <cache alias="query-results">
        <expiry>
            <ttl unit="minutes">15</ttl>
        </expiry>
        <heap unit="entries">1000</heap>
    </cache>

    <!-- Cache pour les timestamps des requêtes -->
    <cache alias="timestamps">
        <expiry>
            <ttl unit="minutes">5</ttl>
        </expiry>
        <heap unit="entries">10000</heap>
    </cache>

    <!-- Cache pour les collections -->
    <cache alias="collections">
        <expiry>
            <ttl unit="minutes">20</ttl>
        </expiry>
        <heap unit="entries">1000</heap>
    </cache>

    <!-- Configuration du cache pour les requêtes nommées -->
    <cache alias="org.hibernate.cache.spi.QueryResultsRegion">
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <heap unit="entries">1000</heap>
    </cache>

    <!-- Configuration du cache pour les timestamps -->
    <cache alias="org.hibernate.cache.spi.TimestampsRegion">
        <expiry>
            <ttl unit="minutes">5</ttl>
        </expiry>
        <heap unit="entries">10000</heap>
    </cache>

    <!-- Configuration du cache pour les requêtes HQL -->
    <cache-template name="hibernate-query">
        <key-type>java.lang.String</key-type>
        <value-type>java.lang.Object</value-type>
        <heap unit="entries">100</heap>
    </cache-template>

</config>
