<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence version="3.0"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    
    <persistence-unit name="event-manager-pu" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <!-- Liste des classes d'entités -->
        <class>com.example.jee_event_manager.model.Utilisateur</class>
        <class>com.example.jee_event_manager.model.Participant</class>
        <class>com.example.jee_event_manager.model.Organisateur</class>
        <class>com.example.jee_event_manager.model.Evenement</class>
        <class>com.example.jee_event_manager.model.Categorie</class>
        <class>com.example.jee_event_manager.model.Inscription</class>
        
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        
        <properties>
            <!-- Configuration de la connexion à la base de données -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/event_manager_db"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="1234"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            
            <!-- Configuration Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            
            <!-- Paramètres de logging (à désactiver en production) -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
        </properties>
    </persistence-unit>
    
</persistence>
