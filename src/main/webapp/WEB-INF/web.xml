<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Event Management Platform</display-name>
    <description>Java EE Event Management System</description>

    <!-- Welcome Files -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>jsp/login.jsp</welcome-file>
    </welcome-file-list>

    <!-- Session Configuration -->
    <session-config>
        <!-- Session timeout in minutes (30 minutes) -->
        <session-timeout>30</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
            <!-- Enable secure flag in production (HTTPS) -->
            <!-- <secure>true</secure> -->
        </cookie-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>

    <!-- Context Parameters for Application-wide Configuration -->
    <context-param>
        <param-name>application.name</param-name>
        <param-value>Event Management Platform</param-value>
    </context-param>

    <context-param>
        <param-name>email.smtp.host</param-name>
        <param-value>smtp.gmail.com</param-value>
    </context-param>

    <context-param>
        <param-name>email.smtp.port</param-name>
        <param-value>587</param-value>
    </context-param>

    <!-- Email credentials should be set via environment variables or external config -->
    <context-param>
        <param-name>email.username</param-name>
        <param-value>${EMAIL_USERNAME}</param-value>
    </context-param>

    <context-param>
        <param-name>email.password</param-name>
        <param-value>${EMAIL_PASSWORD}</param-value>
    </context-param>

    <!-- Filters -->
    <!-- Character Encoding Filter -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>com.projet.jee.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Authentication Filter (protects secured pages) -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.projet.jee.filter.AuthenticationFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/jsp/profile.jsp</url-pattern>
        <url-pattern>/jsp/request-organizer.jsp</url-pattern>
        <url-pattern>/profile</url-pattern>
        <url-pattern>/request-organizer</url-pattern>
        <url-pattern>/comment</url-pattern>
        <url-pattern>/rating</url-pattern>
        <url-pattern>/logout</url-pattern>
    </filter-mapping>

    <!-- Admin Filter (protects admin pages) -->
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>com.projet.jee.filter.AdminFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
        <url-pattern>/jsp/admin/*</url-pattern>
    </filter-mapping>

    <!-- Organizer Filter (protects organizer pages) -->
    <filter>
        <filter-name>OrganizerFilter</filter-name>
        <filter-class>com.projet.jee.filter.OrganizerFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>OrganizerFilter</filter-name>
        <url-pattern>/organizer/*</url-pattern>
        <url-pattern>/jsp/organizer/*</url-pattern>
    </filter-mapping>

    <!-- CSRF Protection Filter -->
    <filter>
        <filter-name>CSRFFilter</filter-name>
        <filter-class>com.projet.jee.filter.CSRFFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>CSRFFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Security Constraints (JSP files should not be directly accessible) -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>JSP Pages</web-resource-name>
            <url-pattern>/jsp/*</url-pattern>
        </web-resource-collection>
        <!-- Allow all users, but prefer servlet-based access -->
    </security-constraint>

    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/jsp/error/404.jsp</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/jsp/error/500.jsp</location>
    </error-page>

    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/jsp/error/error.jsp</location>
    </error-page>

    <!-- Servlets -->
    <!-- Authentication Servlets -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.projet.jee.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.projet.jee.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.projet.jee.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- User Profile Servlets -->
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>com.projet.jee.servlet.ProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RoleUpgradeServlet</servlet-name>
        <servlet-class>com.projet.jee.servlet.RoleUpgradeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RoleUpgradeServlet</servlet-name>
        <url-pattern>/request-organizer</url-pattern>
    </servlet-mapping>

    <!-- Comment & Rating Servlets -->
    <servlet>
        <servlet-name>CommentServlet</servlet-name>
        <servlet-class>com.projet.jee.servlet.CommentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CommentServlet</servlet-name>
        <url-pattern>/comment</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RatingServlet</servlet-name>
        <servlet-class>com.projet.jee.servlet.RatingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RatingServlet</servlet-name>
        <url-pattern>/rating</url-pattern>
    </servlet-mapping>

    <!-- Password Reset Servlets -->
    <servlet>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <servlet-class>com.projet.jee.servlet.ForgotPasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <url-pattern>/forgot-password</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <servlet-class>com.projet.jee.servlet.ResetPasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <url-pattern>/reset-password</url-pattern>
    </servlet-mapping>

    <!-- Admin Servlets -->
    <servlet>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <servlet-class>com.projet.jee.servlet.AdminDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <url-pattern>/admin/dashboard</url-pattern>
    </servlet-mapping>

    <!-- Organizer Servlets -->
    <servlet>
        <servlet-name>OrganizerDashboardServlet</servlet-name>
        <servlet-class>com.projet.jee.servlet.OrganizerDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrganizerDashboardServlet</servlet-name>
        <url-pattern>/organizer/dashboard</url-pattern>
    </servlet-mapping>

</web-app>
